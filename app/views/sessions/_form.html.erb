<%= form_for(:session,:url => login_path, :html => {:class=>'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :username, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :username, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :remember_me, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.check_box :remember_me, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= link_to "New User?", signup_path%> | <%= link_to "Forgot password", new_password_reset_path %>
       </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Submit", :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>
